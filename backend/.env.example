# SUPABASE DATABASE
# Get from Supabase Dashboard > Project Settings > Database > Connection String
# Use "Transaction" mode (port 6543) for the pooler
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-1-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Use "Session" mode (port 5432) for migrations
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-1-eu-central-1.pooler.supabase.com:5432/postgres"

# JWT AUTHENTICATION
# Generate with: openssl rand -base64 64
JWT_SECRET="[GENERATE_RANDOM_64_BYTE_SECRET]"
JWT_REFRESH_SECRET="[GENERATE_RANDOM_64_BYTE_SECRET]"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# SERVER
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:5173"

# ADMIN (Change immediately after first setup)
ADMIN_EMAIL="admin@saberstore.eg"
ADMIN_PHONE="01000000000"
ADMIN_PASSWORD="[CHANGE_ME_STRONG_PASSWORD]"

# REDIS (For rate limiting and token blacklist)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
# For production: Use managed Redis (Upstash, Redis Cloud, AWS ElastiCache)
REDIS_URL=""

# AWS S3 (For file uploads)
AWS_ACCESS_KEY_ID="[YOUR_AWS_ACCESS_KEY]"
AWS_SECRET_ACCESS_KEY="[YOUR_AWS_SECRET_KEY]"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="[YOUR_BUCKET_NAME]"

# PAYMOB (Payment gateway)
PAYMOB_API_KEY="[YOUR_PAYMOB_API_KEY]"
PAYMOB_SECRET_KEY="[YOUR_PAYMOB_SECRET_KEY]"
PAYMOB_INTEGRATION_ID="[YOUR_INTEGRATION_ID]"

# ENCRYPTION (For PII data - National ID, etc.)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="[GENERATE_RANDOM_32_BYTE_KEY]"
ENCRYPTION_IV="[GENERATE_RANDOM_16_BYTE_IV]"

# SMS PROVIDER (For OTP)
SMS_PROVIDER_API_KEY="[YOUR_SMS_API_KEY]"
SMS_PROVIDER_SENDER_ID="SaberStore"

# CORS
ALLOWED_ORIGINS="http://localhost:5173,https://saberstore.eg"

# RATE LIMITING
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# SECURITY
# Set to 'true' in production
FORCE_HTTPS="false"
ENABLE_CSRF="true"
COOKIE_SECURE="false"
COOKIE_SAME_SITE="lax"

# LOGGING
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"
